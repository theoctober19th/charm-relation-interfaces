{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://canonical.github.io/charm-relation-interfaces/interfaces/s3/v1/schemas/requirer.json",
    "title": "`s3` requirer schema",
    "description": "The schema comprises the entire requirer databag for this interface.",
    "type": "object",
    "default": {},
    "required": [
        "lib-version",
        "requested-secrets"
    ],
    "additionalProperties": true,
    "properties": {
        "bucket": {
            "title": "Bucket Name",
            "description": "The bucket name requested by the requirer",
            "type": "string",
            "default": "",
            "examples": [
                "my-bucket-name"
            ]
        },
        "path": {
            "title": "S3 Path",
            "description": "The S3 path requested by the requirer",
            "type": "string",
            "default": "",
            "examples": [
                "my/object/path"
            ]
        },
        "requested-secrets": {
            "title": "Requested Secret Fields",
            "description": "The fields requested by the requirer to be shared using Juju secret.",
            "type": "string",
            "default": "[\"access-key\", \"secret-key\"]",
            "examples": [
                "[\"access-key\", \"secret-key\"]"
            ]
        },
        "lib-version": {
            "title": "S3 lib version",
            "description": "The version of the S3 lib used by the requirer.",
            "type": "string",
            "default": "",
            "examples": [
                "1.10"
            ]
        }
    },
    "examples": [
        {
            "bucket": "minio",
            "path": "my/path",
            "requested-secrets": "[\"access-key\", \"secret-key\"]",
            "lib-version": "1.10"
        }
    ]
}
